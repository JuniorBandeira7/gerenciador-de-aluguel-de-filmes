<h1>usuarios:</h1>
<div class="container-list">
    <ul>
        {{#each users}}
           <li>
                <a href="/users/{{this.id}}" class="title">{{this.name}}</a>
                <div class="actions">
                    <a href="/users/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
                    <form action="/users/remove" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <button type="submit">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </form>
                </div>
            </li> 
        {{/each}}
    </ul>
</div>