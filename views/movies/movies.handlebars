<h1>Lista de Filmes</h1>
<div class="container-list">
    <ul>
        {{#each movies}}
            <li>
                <a href="/movies/{{this.id}}" class="title">{{this.title}}</a>
                <div class="actions">
                    <a href="/movies/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
                    <form action="/movies/remove" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <button type="submit">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </form>
                </div>
            </li>
        {{/each}}
    </ul>
</div>
